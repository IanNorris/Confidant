# GNU Make solution makefile autogenerated by Premake

.NOTPARALLEL:

ifndef config
  config=debug
endif

ifndef verbose
  SILENT = @
endif

ifeq ($(config),debug)
  sodium_config = debug
  restclient_config = debug
  json_config = debug
  Confidant_config = debug
  Client_config = debug
endif
ifeq ($(config),release)
  sodium_config = release
  restclient_config = release
  json_config = release
  Confidant_config = release
  Client_config = release
endif

PROJECTS := sodium restclient json Confidant Client

.PHONY: all clean help $(PROJECTS) 

all: $(PROJECTS)

sodium:
ifneq (,$(sodium_config))
	@echo "==== Building sodium ($(sodium_config)) ===="
	@${MAKE} --no-print-directory -C . -f sodium.make config=$(sodium_config)
endif

restclient:
ifneq (,$(restclient_config))
	@echo "==== Building restclient ($(restclient_config)) ===="
	@${MAKE} --no-print-directory -C . -f restclient.make config=$(restclient_config)
endif

json:
ifneq (,$(json_config))
	@echo "==== Building json ($(json_config)) ===="
	@${MAKE} --no-print-directory -C . -f json.make config=$(json_config)
endif

Confidant:
ifneq (,$(Confidant_config))
	@echo "==== Building Confidant ($(Confidant_config)) ===="
	@${MAKE} --no-print-directory -C . -f Confidant.make config=$(Confidant_config)
endif

Client: Confidant sodium restclient json
ifneq (,$(Client_config))
	@echo "==== Building Client ($(Client_config)) ===="
	@${MAKE} --no-print-directory -C . -f Client.make config=$(Client_config)
endif

clean:
	@${MAKE} --no-print-directory -C . -f sodium.make clean
	@${MAKE} --no-print-directory -C . -f restclient.make clean
	@${MAKE} --no-print-directory -C . -f json.make clean
	@${MAKE} --no-print-directory -C . -f Confidant.make clean
	@${MAKE} --no-print-directory -C . -f Client.make clean

help:
	@echo "Usage: make [config=name] [target]"
	@echo ""
	@echo "CONFIGURATIONS:"
	@echo "  debug"
	@echo "  release"
	@echo ""
	@echo "TARGETS:"
	@echo "   all (default)"
	@echo "   clean"
	@echo "   sodium"
	@echo "   restclient"
	@echo "   json"
	@echo "   Confidant"
	@echo "   Client"
	@echo ""
	@echo "For more information, see http://industriousone.com/premake/quick-start"
